<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <!-- Logo -->
        <img src="~/images/logo.jpg" alt="Logo" style="width: 150px; height: 150px; object-fit: cover; object-position: center;">

        <!-- Profil użytkownika w prawym górnym rogu -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex align-items-center">
                <span class="me-3">Witaj, @User.Identity.Name!</span>
                <form asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger">Wyloguj się</button>
                </form>
            </div>
        }
        else
        {
            <div class="d-flex align-items-center">
                <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Register">Rejestracja</a>
                <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Logowanie</a>
            </div>
        }
    </div>

    <h1 class="text-center mb-5">Witamy w systemie rezerwacji usług fryzjerskich</h1>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            Brak salonów w twojej okolicy.
        </div>
    }
    else
    {
        <h3 class="text-center mb-4">Znajdź dostępne salony fryzjerskie:</h3>

        <div class="row">
            @foreach (var salon in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@salon.Name</h5>
                            <p class="card-text"><strong>Adres:</strong> @salon.Address</p>
                            <p class="card-text">@salon.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
