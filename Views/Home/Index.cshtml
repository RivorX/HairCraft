@model IEnumerable<Salon>

<div class="container mt-5">
    <h1 class="text-center mb-5">Witamy w systemie rezerwacji fryzjerskich</h1>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="d-flex justify-content-center mb-4">
            <a class="btn btn-primary mx-2" asp-controller="Account" asp-action="Register">Rejestracja</a>
            <a class="btn btn-secondary mx-2" asp-controller="Account" asp-action="Login">Logowanie</a>
        </div>
    }
    else
    {
        <div class="text-center mb-4">
            <h2>Witaj, @User.Identity.Name!</h2>
            <form asp-action="Logout" method="post" class="mt-3">
                <button type="submit" class="btn btn-danger">Wyloguj się</button>
            </form>
        </div>
    }

    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            Brak salonów w twojej okolicy.
        </div>
    }
    else
    {
        <h3 class="text-center mb-4">Znajdź dostępne salony fryzjerskie:</h3>

        <div class="row">
            @foreach (var salon in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@salon.Name</h5>
                            <p class="card-text"><strong>Adres:</strong> @salon.Address</p>
                            <p class="card-text">@salon.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
