@model IEnumerable<Salon>

<h1>Witamy w systemie rezerwacji fryzjerskich</h1>

@if (!User.Identity.IsAuthenticated)
{
    <div class="mb-3">
        <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Rejestracja</a>
        <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Logowanie</a>
    </div>
}
else
{
    <h2>Witaj, @User.Identity.Name!</h2>
    <form asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Wyloguj się</button>
    </form>
}

@if (Model.Count() == 0)
{
    <p>Brak salonów w twojej okolicy.</p>
}
else
{
    <p>Znajdź dostępne salony fryzjerskie:</p>

    @foreach (var salon in Model)
    {
        <div>
            <h2>@salon.Name</h2>
            <p>@salon.Address</p>
            <p>@salon.Description</p>
        </div>
    }
}
