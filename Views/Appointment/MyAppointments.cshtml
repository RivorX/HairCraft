@model IEnumerable<HAIRCRAFT.Models.Appointment>

<div class="container">
    <h2>Twoje zarezerwowane wizyty</h2>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Salon</th>
                    <th>Usługa</th>
                    <th>Data</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Salon.Name</td>
                        <td>@appointment.Service</td>
                        <td>@appointment.AppointmentDate.ToString("f")</td>
                        <td>
                            <form asp-action="CancelAppointment" asp-controller="Appointment" method="post">
                                <input type="hidden" name="id" value="@appointment.Id" />
                                <button type="submit" class="btn btn-danger">Odwołaj</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nie masz zarezerwowanych wizyt.</p>
    }
</div>
